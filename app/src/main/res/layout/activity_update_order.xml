<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateOrder"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Data Order"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textStyle="bold"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_idorder"
        android:hint="ID Here!"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_namacustomer"
        android:hint="Customer Here!"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_namakue"
        android:hint="Cake Here!"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_rasakue"
        android:hint="Taste Here!"/>
    <EditText
        style="@style/edit_text"
        android:id="@+id/input_jumlahkue"
        android:hint="Quantity Here!"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            style="@style/btnlogin"
            android:id="@+id/btn_update"
            android:text="Update"
            android:onClick="updateDataOrder"/>
        <Button
            style="@style/btnlogin"
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:onClick="cancelDataOrder"/>
    </LinearLayout>
</LinearLayout>